<a href="#" class="burger_btn" id="burger_btn"><i class="fa-solid fa-bars"></i></a>
<div class="navmenu_box" id="navmenu_box">
    <div class="logo">
        <img src="img/CA_logo.svg" alt="logo">
    </div>
    <div class="navmenu">
        <ul>
            <li><a href="#" onclick="scrollToAnchor('#about');">Om Pakker</a></li>
            <li><a href="#" onclick="scrollToAnchor('#apply');">Tag en pakke</a></li>
            <li><a href="https://www.ca.dk/formularer/indmeldelse-ca/">Bliv medlem</a></li>
        </ul>
    </div>
    <div class="mitca_box">
        <ul>
            <li class="mitca"><a href="#"><i class="fa-regular fa-user"></i> Mit CA</a></li>
        </ul>
    </div>
</div>

<style>
    .burger_btn {
        color: black;
        background-color: #e6e6de;
        padding: 10px 12px 8px 12px;
        border: 1px solid #666;
        position: fixed;
        top: 30px;
        right: 30px;
        display: none;
        z-index: 2;
    }
    .navmenu_box {
        display: grid;
        grid-template-columns: 2fr 3fr 1fr;
        font-size: 20px;
        position: fixed;
        top: 0;
        width: 100%;
        background-color: #e6e6de;
        z-index: 1;
        transition: all .3s;
    }
    .logo img {
        width: 60%;
    }
    .navmenu {
        text-align: right;
    }
    ul {
        list-style: none;
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }
    a {
        text-decoration: none;
        color: #4a4a4a;
        padding: 15px 40px;
    }
    .mitca_box {
        background-color: #084b7c;
    }
    .mitca a {
        background-color: #084b7c;
        color: white;
    }
    .visible {
        top: 0 !important;
    }
    @media screen and (max-width: 1200px) {
        .burger_btn {
            display: block;
        }
        .navmenu_box {
            grid-template-columns: 1fr;
            top: -500px;
        }
        .navmenu {
            text-align: center;
        }
        .logo {
            display: none;
        }
        .mitca_box {
            background-color: #e6e6de;
            text-align: center;
        }
        .mitca a {
            background-color: transparent;
            color: black;
            margin-bottom: 30px;
        }
        .navmenu li {
            margin-bottom: 30px;
        }
        ul {
            flex-direction: column;
        }
    }
</style>

<script is:inline>
    function scrollToAnchor(element) {
        event.preventDefault();
        document.querySelector(element).scrollIntoView({behavior: "smooth"});
    }
    function toggleMenu() {
        event.preventDefault();
        document.querySelector("#navmenu_box").classList.toggle("visible");
    }
    document.querySelector("#burger_btn").addEventListener("click", toggleMenu);
</script>